<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgreen"
    android:fitsSystemWindows="true"
    tools:context=".LanguageActivity">

    <TextView
        android:id="@+id/textlanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/featherfont"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:text="I want to learn:"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/buttonenglish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="56dp"
        android:textColor="@color/white"
        android:fontFamily="@font/featherfont"
        android:textSize="25sp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:focusable="true"
        android:textAllCaps="false"
        android:background="@drawable/backgroundlanguageswhite"
        android:text="English"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonlevelenglish"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"/>

    <Button
        android:id="@+id/buttonspanish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="56dp"
        android:textColor="@color/white"
        android:fontFamily="@font/featherfont"
        android:textSize="25sp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:focusable="true"
        android:textAllCaps="false"
        android:background="@drawable/backgroundlanguageswhite"
        android:text="Spanish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonlevelspanish"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"/>

    <Button
        android:id="@+id/buttonitalian"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="56dp"
        android:textColor="@color/white"
        android:fontFamily="@font/featherfont"
        android:textSize="25sp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:focusable="true"
        android:textAllCaps="false"
        android:background="@drawable/backgroundlanguageswhite"
        android:text="Italian"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonlevelitalian"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"/>



    <Button
        android:id="@+id/buttonlevelenglish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/featherfont"
        android:layout_marginEnd="10dp"
        android:textSize="25sp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:focusable="true"
        android:textAllCaps="false"
        android:background="@drawable/backgroundlanguageswhite"
        android:text="Lvl 1"
        app:layout_constraintBottom_toBottomOf="@id/buttonenglish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonenglish"
        app:layout_constraintTop_toTopOf="@id/buttonenglish" />

    <Button
        android:id="@+id/buttonlevelspanish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/featherfont"
        android:layout_marginEnd="10dp"
        android:textSize="25sp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:focusable="true"
        android:textAllCaps="false"
        android:background="@drawable/backgroundlanguageswhite"
        android:text="Lvl 1"
        app:layout_constraintBottom_toBottomOf="@id/buttonspanish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonspanish"
        app:layout_constraintTop_toTopOf="@id/buttonspanish" />

    <Button
        android:id="@+id/buttonlevelitalian"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/featherfont"
        android:layout_marginEnd="10dp"
        android:textSize="25sp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:focusable="true"
        android:textAllCaps="false"
        android:background="@drawable/backgroundlanguageswhite"
        android:text="Lvl 1"
        app:layout_constraintBottom_toBottomOf="@id/buttonitalian"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonitalian"
        app:layout_constraintTop_toTopOf="@id/buttonitalian" />

</androidx.constraintlayout.widget.ConstraintLayout>